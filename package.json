{
  "name": "collabboard",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port ${VITE_PORT:-5173}",
    "dev:server": "wrangler dev --port ${WRANGLER_PORT:-8787}",
    "build": "vite build",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types",
    "typecheck": "npm run cf-typegen && tsc --noEmit",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "migrate:local": "wrangler d1 migrations apply collabboard-db --local",
    "migrate:remote": "wrangler d1 migrations apply collabboard-db --remote",
    "migrate": "npm run migrate:local && npm run migrate:remote",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "demo": "scripts/demo.sh",
    "demo:e2e": "scripts/demo.sh e2e"
  },
  "dependencies": {
    "@cloudflare/ai-utils": "^1.0.1",
    "hono": "^4.7.0",
    "konva": "^10.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-konva": "^19.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "typescript": "^5.7.0",
    "vite": "^6.1.0",
    "wrangler": "^4.65.0"
  }
}
